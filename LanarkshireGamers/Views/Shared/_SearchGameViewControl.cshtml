@model IList<LanarkshireGamers.ViewModel.SearchGameViewModel>

@for (int i=0;i<Model.Count;i++)
{
    <div id='@Model[i].Name'>
        @Html.HiddenFor(modelItem => modelItem[i].Name) 
        @Html.HiddenFor(modelItem => modelItem[i].GeekID)
        @Html.DisplayFor(modelItem => modelItem[i].Name) @Html.CheckBoxFor(modelItem=>modelItem[i].Selected)
    </div>
}
