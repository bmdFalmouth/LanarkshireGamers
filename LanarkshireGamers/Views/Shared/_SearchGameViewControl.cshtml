@model IList<LanarkshireGamers.ViewModel.SearchGameViewModel>

@for (int i=0;i<Model.Count;i++)
{
    <div id='searchResult'>
        @Html.HiddenFor(modelItem => modelItem[i].Name) 
        @Html.HiddenFor(modelItem => modelItem[i].GeekID)
        <a class='hoverElement' href='@Model[i].GameURL'>@Model[i].Name</a>
        @Html.CheckBoxFor(modelItem=>modelItem[i].Selected)
    </div>
}