@model LanarkshireGamers.ViewModel.GameViewModel

<div class="display-game">
    <table border="0">
    <tr>
        <td class='thumbnailCell'><img src='@Model.ThumbNailURL' alt='@Model.Name' /></td>
        <td>
            <h2>@Html.DisplayFor(model => model.Name)</h2>
        </td> 
    </tr>
    <tr>
        <td>Player time(in mins):</td>
        <td><b>@Html.DisplayFor(model=>model.PlayTime)</b></td>
    </tr>
    <tr>
        <td>Number of Players:</td>
        <td>@if(Model.MinNumberOfPlayers== Model.MaxNumberOfPlayers)
            {
                <b>@Html.DisplayFor(model => model.MinNumberOfPlayers)</b>
            }
            else
            {
                <b>@Html.DisplayFor(model => model.MinNumberOfPlayers) - @Html.DisplayFor(model => model.MaxNumberOfPlayers)</b>
            }
        </td>
    </tr>
    <tr>
    
        <td colspan="2">
            <div class="descriptionElement">
                <p class="clickInstruction">Click to hide/show<br /><br /></p>
                <p class="description">@Html.Raw(Model.Description)</p>
            </div>
         </td>
    </tr>
    </table>
     
</div>

<script type="text/javascript">
    $(document).ready($(function () {
        $('.description').hide();

        $('.descriptionElement').click(function () {
            var descInst = $(this).find('p:last');
            descInst.slideToggle("slow");
            e.preventDefault();
            e.stopPropagation();
            return false;
        });
    }));
</script>